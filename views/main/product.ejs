<% layout('layout') -%>


<div class="container">
  <div class="row">
    <div class="col-md-4">
          <img src="<%= product.image %>">

      
    </div> <!-- col -->

    <div class="col-md-4">
      
    </div>


    <div class="col-md-4">
      <h3><%= product.name %></h3>
      <h1><%= product.price %></h1>

      <form method="post">
<!--       Increase and Decreate the quantities of product -->
        <div class="btn-group" role="group" aria-label="...">
<!-- $('$quantity').val(quantity); we want to change the value so we can send it to the server -->
          <input type="hidden" name="quantity" id="quantity" value="1"></input>
          <button type="button" id="minus" class="btn btn default">-</button>
          <button type="button" id="total" class="btn btn default">1</button>
          <button type="button" id="plus" class="btn btn default">+</button>
        </div><!-- btn-group cls -->
        
        <div class="form-group">
          <input type="hidden" name="product_id" id="quantity" value="<%= product._id %>"></input>
          <input type="hidden" name="priceHidden" id="priceHidden" value="<%= product.price %>"></input>
<!-- push product to server.. "name" -->
          <input type="text" name="item" class="form-group" value="<%= product.name %>"></input>
          <input type="text" name="priceValue" id="priceValue" class="form-group" value="<%= product.price %>"></input>
        </div>

        <% if (user) { %>
        <button type="submit" class="btn btn-primary btn-lg">Add to Cart</button>

        <% } else { %>

        <a href="'/signup" class="btn btn-warning btn-lg">Signup to begin buying!</a>

        <% } %>

      </form>
      
    </div>

  </div> <!-- row -->
</div> <!-- close container -->